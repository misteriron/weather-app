{% extends 'base.html.twig' %}

{% block title %}API météo{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>API Météo</h1>

    DOCUMENTATION :
    <ul>
        <li>"{{ app.request.uri | trim('/') }}{{ path('api_weather_geolocation') }}" :
            permet de récupérer les conditions météos de la ville de l'utilisateur.</li>
        <li>"{{ app.request.uri | trim('/') }}{{ path('api_weather_city') }}/{city}" :
            permet de récupérer les conditions météos de la ville envoyé dans le paramètre city
            (ex: {{ app.request.uri | trim('/') }}{{ path('api_weather_city') }}/Paris).</li>
    </ul>
</div>
{% endblock %}
